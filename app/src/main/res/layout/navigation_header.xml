<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/navigation_header_padding_top_bottom"
    android:paddingBottom="@dimen/navigation_header_padding_top_bottom">

    <ImageView
        android:id="@+id/user_logo"
        android:layout_width="@dimen/user_logo_size"
        android:layout_height="@dimen/user_logo_size"
        android:padding="5dp"
        android:src="@mipmap/default_personal_image"/>

    <TextView
        android:id="@+id/user_nike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:text="@string/user_name"/>

</LinearLayout>